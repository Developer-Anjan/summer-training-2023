<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="stylesheet"
      href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="../public/assets/css/style.css" />
    <style>
      ul {
        list-style: none;
      }
      ul a {
        text-decoration: none;
        color: #090909;
      }
      .profile-photo-sm {
        height: 75px;
        width: 75px;
        object-fit: cover;
        object-position: center;
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <div
      class="container-fluid d-flex justify-content-between align-items-center shadow-sm py-3 px-5"
    >
      <h1 class="fs-5">admin dashboard</h1>
      <ul class="text-decoration-none d-flex m-0">
        <li class="mx-2"><a href="">Dashboard</a></li>
        <li class="mx-2"><a href="./candidates">candidates</a></li>
        <li class="mx-2"><a href="./posts">posts</a></li>
        <li class="mx-2"><a href="">voters</a></li>
        <li class="mx-2"><a href="/logout">Logout</a></li>
      </ul>
    </div>

    <div class="container my-5">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between mb-3">
            <p>
              <span>Dashboard</span>/
              <span>Candidates</span>
            </p>
            <a
              href="#"
              class="btn btn-outline-primary btn-sm d-flex align-items-center"
              data-bs-toggle="modal"
              data-bs-target="#add_candidate"
              ><i class="bi bi-plus-lg"></i> <span>Add Post</span></a
            >
          </div>

          <% if(message.success && message.success.length>0){ %>
          <div class="alert alert-success" role="alert">
            <%= message.success%>
          </div>
          <% }else{ if(message.error && message.error.length>0){ %>
          <div class="alert alert-danger" role="alert">
            <%= message.error%>
          </div>
          <% }else{ %>
          <div></div>
          <% }} %>

          <table class="table">
            <thead>
              <tr>
                <th>Sl. No.</th>
                <th>Name</th>
                <th>Accronym</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% posts.forEach((post,indx) => { %>
              <tr>
                <td><%= indx+1 %></td>
                <td><%= post.name %></td>
                <td><%= post.acronym %></td>
                <td>
                  <a
                    href="#"
                    class="btn btn-warning btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#post_<%= indx+1%>"
                    ><i class="bi bi-pencil-square"></i
                  ></a>
                  <a
                    href="./posts/delete/<%= post.id%>"
                    class="btn btn-danger btn-sm"
                    ><i class="bi bi-trash"></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- posts modals -->

    <% posts.forEach((post,index)=>{ %>

    <div class="modal" tabindex="-1" id="post_<%=index+1%>">
      <div class="modal-dialog">
        <div class="modal-content">
          <button
            type="button"
            class="btn-close me-0 ms-auto"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="modal-body">
            <form action="./posts/update" method="post">
              <div class="mb-3">
                <label for="name">Post Name</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  value="<%= post.name %>"
                  name="name"
                  placeholder="write post name"
                />
              </div>
              <div class="mb-3">
                <label for="name">Post Accronym</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  value="<%= post.acronym %>"
                  name="acronym"
                  placeholder="write post name"
                />
              </div>
              <input type="hidden" name="id" value="<%= post.id%>" />
              <button
                type="submit"
                class="btn btn-sm btn-primary d-block w-max mx-auto"
              >
                update
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%})%>

    <!-- add candidate modal -->
    <div class="modal" tabindex="-1" id="add_candidate">
      <div class="modal-dialog">
        <div class="modal-content">
          <button
            type="button"
            class="btn-close me-0 ms-auto"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="modal-body">
            <form action="./posts/add" method="post">
              <div class="mb-3">
                <label for="name">Post Name</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="write post name"
                />
              </div>
              <div class="mb-3">
                <label for="name">Post Acronym</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  name="acronym"
                  placeholder="write acronym for the post"
                />
              </div>
              <button
                type="submit"
                class="btn btn-sm btn-primary d-block w-max mx-auto"
              >
                add
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
