<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="stylesheet"
      href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="../public/assets/css/style.css" />
    <style>
      ul {
        list-style: none;
      }
      ul a {
        text-decoration: none;
        color: #090909;
      }
      .profile-photo-sm {
        height: 75px;
        width: 75px;
        object-fit: cover;
        object-position: center;
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <div
      class="container-fluid d-flex justify-content-between align-items-center shadow-sm py-3 px-5"
    >
      <h1 class="fs-5">admin dashboard</h1>
      <ul class="text-decoration-none d-flex m-0">
        <li class="mx-2"><a href="">Dashboard</a></li>
        <li class="mx-2"><a href="./candidates">candidates</a></li>
        <li class="mx-2"><a href="./posts">posts</a></li>
        <li class="mx-2"><a href="">voters</a></li>
        <li class="mx-2"><a href="/logout">Logout</a></li>
      </ul>
    </div>

    <div class="container my-5">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between mb-3">
            <p>
              <span>Dashboard</span>/
              <span>Candidates</span>
            </p>
            <a
              href="#"
              class="btn btn-outline-primary btn-sm d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#add_candidate"
              ><i class="bi bi-plus-lg"></i> <span>Add Candidate</span></a
            >
          </div>

          <% if(message.success && message.success.length>0){ %>
            <div class="alert alert-success" role="alert">
              <%= message.success%>
            </div>
            <%
              }else{ 
                if(message.error && message.error.length>0){
            %>
              <div class="alert alert-danger" role="alert">
                <%= message.error%>
              </div>
            <%
              }else{
            %>
              <div></div>
            <% }} %>


          <table class="table">
            <thead>
              <tr>
                <th>Sl. No.</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Post</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% candidates.forEach((candidate,indx) => { 
                
                var photo;
                
                if(candidate.profile == null){ 
                      photo = "/avatar.jpg" 
                }else{
                  if(candidate.profile.photo.length==0){
                    photo = "/avatar.jpg" 

                  }else{
                    photo =  candidate.profile.photo;

                  }
                }
                  
              %>
              <tr>
                <td><%= indx+1 %></td>
                <td><%= candidate.name %></td>
                <td>
                  <img src="<%= photo %>" alt="" class="profile-photo-sm" />
                </td>
                <td><%= candidate.post == null ? "Not Assigned" : candidate.post.name %></td>
                <td>
                  <a
                    href="#"
                    class="btn btn-warning btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#candidate_<%= indx+1%>"
                    ><i class="bi bi-pencil-square"></i
                  ></a>
                  <a href="./candidates/delete/<%= candidate.id%>" class="btn btn-danger btn-sm"
                    ><i class="bi bi-trash"></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- candidates modals -->

    <% candidates.forEach((candidate,index)=>{ %>

    <div class="modal" tabindex="-1" id="candidate_<%=index+1%>">
      <div class="modal-dialog">
        <div class="modal-content">
          <button
            type="button"
            class="btn-close me-0 ms-auto"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="modal-body">
            <form action="./candidates/update" method="post">
              <div class="mb-3">
                <label for="name">Candidate Name</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  value="<%= candidate.name %>"
                  name="name"
                  placeholder="write candidate name"
                />
              </div>
              <div class="mb-3">
                <label for="post">Post</label>
                <select id="post" class="form-control" name="post">
                  <% posts.forEach(post=>{%>
                  <option
                    value="<%=post.id%>"
                    <%= candidate.post !==null && post.name==candidate.post.name ? "selected" : ""%>
                    ><%= post.name%></option
                  >
                  <%})%>
                </select>
              </div>
              <input type="hidden" name="id" value="<%= candidate.id%>">
              <button
                type="submit"
                class="btn btn-sm btn-primary d-block w-max mx-auto"
              >
                update
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%})%>


    <!-- add candidate modal -->
    <div class="modal" tabindex="-1" id="add_candidate">
      <div class="modal-dialog">
        <div class="modal-content">
          <button
            type="button"
            class="btn-close me-0 ms-auto"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
          <div class="modal-body">
            <form action="./candidates/add" method="post">
              <div class="mb-3">
                <label for="name">Candidate Name</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="write candidate name"
                />
              </div>
              <div class="mb-3">
                <label for="name">Candidate Email</label>
                <input
                  id="name"
                  type="text"
                  class="form-control"
                  name="email"
                  placeholder="write candidate email"
                />
              </div>
              <div class="mb-3">
                <label for="post">Post</label>
                <select id="post" class="form-control" name="post">
                  <% posts.forEach(post=>{%>
                  <option
                    value="<%=post.id%>"
                    ><%= post.name%></option
                  >
                  <%})%>
                </select>
              </div>
              <button
                type="submit"
                class="btn btn-sm btn-primary d-block w-max mx-auto"
              >
                add
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
